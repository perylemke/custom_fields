<p id="notice"><%= notice %></p>

<h1>Campos Personalizados</h1>

<table>
  <thead>
    <tr>
      <th>Nome do Campo</th>
      <th>Tipo do Campo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.field_name %></td>
        <td><%= field.field_type %></td>
        <td><%= link_to 'Mostrar', field %></td>
        <td><%= link_to 'Editar', edit_field_path(field) %></td>
        <td><%= link_to 'Excluir', field, method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


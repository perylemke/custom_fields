<%= form_for(field) do |f| %>
  <% if field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(field.errors.count, "error") %> prohibited this field from being saved:</h2>

      <ul>
      <% field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :field_name %>
    <%= f.text_field :field_name %>
  </div>

  <div class="field">
    <%= f.label :field_type %>
    <%= f.select :field_type, [['Texto', 'text'], ['Área de Texto', 'textarea'], ['Combo Box', 'combobox']] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
